@page "{id:long}"
@model MB.Presentation.MVCCore.Areas.Administrator.Pages.ArticleCategorymanagement.EditModel
@{
}

<div class="card">
    <div class="card-header">
        <h3 class="float-left">Rename Article Category @Model.ArticleCategory.Title</h3>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="ArticleCategory.Id"/>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="ArticleCategory.Title" for="Title" class="control-label">Title: </label>
                            <input asp-for="ArticleCategory.Title" id="Title" name="Title" class="form-control"/>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <input type="submit" class="btn btn-success" value="Edit"/>
                        <a class="btn btn-dark" asp-page="./List" asp-area="Administrator">Back To List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>